POST {{baseUrl}}/users
Content-Type: application/json
Authorization: Bearer {{adminToken}}

{
  "email": "manager@losia.com",
  "password": "manager123",
  "firstName": "Manager",
  "lastName": "User",
  "role": "MANAGER",
  "level": 30
}

